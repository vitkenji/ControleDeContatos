@model List<ContatoModel>;
@{
    ViewData["Title"] = "Contatos";
}

<div class="text-center">
    <h1 class="display-4">Listagem de Contatos</h1>
    
    <br />
    <div class=" justify-content-md-start d-md-flex gap-2 d-grid">
        <a role="button" class="btn btn-primary" asp-controller="Contato" asp-action="Criar">Adicionar</a>
    </div>

    <br />

    @if (TempData["MensagemSucesso"] != null)
    {
        <div role="alert" class="alert alert-success">
            <button type="button" class="close-alert btn btn-danger btn-sm">X</button>
            @TempData["MensagemSucesso"]
        </div>
    }

    @if (TempData["MensagemErro"] != null)
    {
        <div role="alert" class="alert alert-danger">
            <button type="button" class="close-alert btn btn-danger btn-sm">X</button> 
            @TempData["MensagemErro"]
        </div>
    }

    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Nome</th>
                <th>Email</th>
                <th>Celular</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if(Model is not null && Model.Any())
                @foreach(ContatoModel contato in Model)
                {
                    <tr>
                        <td>@contato.Id</td>
                        <td>@contato.Nome</td>
                        <td>@contato.Email</td>
                        <td>@contato.Celular</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-primary" asp-controller="Contato" asp-action="Editar" asp-route-id="@contato.Id">Editar</a>
                                <a role="button" class="btn btn-danger" asp-controller="Contato" asp-action="ConfirmacaoApagar" asp-route-id="@contato.Id">Apagar</a>
                            </div>
                        </td>
                    </tr>
                }
        </tbody>
    </table>
</div>