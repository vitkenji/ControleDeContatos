@model ContatoModel
@{
    ViewData["Title"] = "Apagar Contato";
}

<div class="text-center">
    <h1 class="display-4">Confirmar exclusão de @Model.Nome?</h1>

</div>

<a class="btn btn-primary" role="button" asp-controller="Contato" asp-action="Apagar" asp-route-id="@Model.Id">Confirmar</a>
<a class="btn btn-secondary" role="button" asp-controller="Contato" asp-action="Index">Cancelar</a>